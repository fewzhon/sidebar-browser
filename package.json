{
  "name": "sidebar-browser",
  "version": "1.0.0",
  "description": "A lightweight mini-browser for Chrome's side panel with intelligent search integration",
  "main": "background.js",
  "scripts": {
    "build": "node deploy.js",
    "dev": "node deploy.js --validate && echo 'Load extension in chrome://extensions/ with Developer mode enabled'",
    "test": "echo 'Open test-extension.html in your browser to test the extension'",
    "lint": "echo 'Add ESLint configuration if needed'",
    "package": "node deploy.js",
    "validate": "node deploy.js --validate",
    "icons": "echo 'Open generate-icons.html in your browser to create PNG icons'",
    "deploy": "node deploy.js"
  },
  "keywords": [
    "chrome-extension",
    "sidebar",
    "browser",
    "search",
    "web-browsing",
    "productivity"
  ],
  "author": "rexgy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fewzhon/sidebar-browser.git"
  },
  "bugs": {
    "url": "https://github.com/fewzhon/sidebar-browser/issues"
  },
  "homepage": "https://github.com/fewzhon/sidebar-browser#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {},
  "dependencies": {},
  "manifest": {
    "version": 3,
    "permissions": [
      "sidePanel",
      "contextMenus",
      "storage",
      "activeTab"
    ],
    "host_permissions": [
      "https://www.google.com/*",
      "https://www.bing.com/*",
      "https://duckduckgo.com/*"
    ]
  }
} 