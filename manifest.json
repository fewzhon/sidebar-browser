{
  "manifest_version": 3,
  "name": "Sidebar Browser",
  "version": "1.0.0",
  "description": "A lightweight mini-browser in Chrome's side panel with intelligent search integration",
  
  "permissions": [
    "sidePanel",
    "contextMenus",
    "storage",
    "activeTab",
    "tabs",
    "scripting"
  ],
  
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  
  "background": {
    "service_worker": "src/background.js"
  },
  
  "side_panel": {
    "default_path": "src/sidepanel/panel.html"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content-script.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_title": "Open Sidebar Browser",
    "default_icon": {
      "16": "src/icons/icon-16.png",
      "32": "src/icons/icon-32.png",
      "48": "src/icons/icon-48.png",
      "128": "src/icons/icon-128.png"
    }
  },
  
  "icons": {
    "16": "src/icons/icon-16.png",
    "32": "src/icons/icon-32.png",
    "48": "src/icons/icon-48.png",
    "128": "src/icons/icon-128.png"
  },
  
  "options_page": "src/settings/settings.html",
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-src *;"
  },
  
  "commands": {
    "toggle-sidebar": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Toggle sidebar browser"
    },
    "search-sidebar": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Focus search in sidebar"
    }
  }
}